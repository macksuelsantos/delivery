<div class="nested-fields">
  <div class="jumbotron">
    <div class="form-row">
      <div class="form-group col-md-10">
        <label><%= 'Street' %>:</label>
        <%= f.text_field :street, id: :address_address, class: 'form-control' %>
      </div>

      <div class="form-group col-md-2">
        <label><%= 'Number' %>:</label>
        <%= f.text_field :number, id: :address_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label><%= 'Note' %>:</label>
      <%= f.text_area :note, id: :address_note, class: 'form-control' %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-7">
        <label><%= 'Neighborhood' %>:</label>
        <%= f.text_field :neighborhood, id: :address_neghborhood, class: 'form-control' %>
      </div>

      <div class="form-group col-md-5">
        <label><%= 'State' %>:</label>
        <%= f.select :state, br_states, {:prompt => 'Select a State'}, :required => true, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-8">
        <label><%= 'City' %>:</label>
        <%= f.text_field :city, id: :address_city, class: 'form-control' %>
      </div>

      <div class="form-group col-md-4">
        <label><%= 'Zip' %>:</label>
        <%= f.text_field :zip_code, id: :address_zip_code, class: 'form-control' %>
      </div>
    </div>

    <% if controller_name == 'clients' %>
    <%= link_to_remove_association 'Remove', f,  data: {confirm: 'Are you Sure?'}, :class => 'btn btn-danger btn-lg' %>
    <% end %>
  </div>
</div>
