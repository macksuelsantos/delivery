<div class="row panel" data-params="one">
  <%= simple_form_for @client do |f| %>
  <% if @client.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <h2 class="alert-title">Sorry, <%= pluralize(@client.errors.count, 'error') %> prohibited this discount from being saved:</h2>
        <ul class="alert-list">
          <% @client.errors.full_messages.each do |message| %>
              <li><strong>*</strong> <%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

    <div class="form-group">
      <label><%= 'Name' %>:</label>
      <%= f.text_field :name, id: :client_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Email' %>:</label>
      <%= f.text_field :email, id: :client_email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Password' %>:</label>
      <%= f.text_field :password, id: :client_password, type: 'password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Phone' %>:</label>
      <%= f.text_field :phone, id: :client_phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Birthday' %>:</label>
      <%= f.date_select :birthday, id: :client_birthday, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.fields_for :addresses do |address_form| %>
        <%= render :partial => 'address_fields', locals: { :f => address_form} %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= link_to_add_association 'Add Address', f, :addresses  %>
    </div>

    <div class="actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
