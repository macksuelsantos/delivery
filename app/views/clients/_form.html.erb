<%= simple_form_for @client do |f| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :client_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :client_email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, id: :client_password %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, id: :client_phone %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, id: :client_birthday %>
  </div>

  <%= f.fields_for :addresses do |address_form| %>
    <%= render :partial => 'address_fields', locals: { :f => address_form} %>
  <% end %>

  <div class="form-actions">
    <%= link_to_add_association 'Add Address', f, :addresses  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
