<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :weight %>
    <%= f.select :unit_id, @units.collect { |u| [u.name, u.id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
