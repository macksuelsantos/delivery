<%= simple_form_for @employee do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :employee_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :employee_email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, id: :employee_password %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, id: :employee_phone %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, id: :employee_birthday %>
  </div>

  <%= f.fields_for :address do |address| %>
    <%= render :partial => 'address_fields', locals: { :f => address} %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
