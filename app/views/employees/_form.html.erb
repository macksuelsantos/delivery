<div class="row panel" data-params="one">
  <%= simple_form_for @employee do |f| %>
  <% if @employee.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <h2 class="alert-title">Sorry, <%= pluralize(@employee.errors.count, 'error') %> prohibited this discount from being saved:</h2>
        <ul class="alert-list">
          <% @employee.errors.full_messages.each do |message| %>
              <li><strong>*</strong> <%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

    <div class="form-group">
      <label><%= 'Name' %>:</label>
      <%= f.text_field :name, id: :employee_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Email' %>:</label>
      <%= f.text_field :email, id: :employee_email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Password' %>:</label>
      <%= f.text_field :password, id: :employee_password, type: 'password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Phone' %>:</label>
      <%= f.text_field :phone, id: :employee_phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Birthday' %>:</label>
      <%= f.date_select :birthday, id: :employee_birthday, :required => true, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.fields_for :address do |address| %>
        <%= render :partial => 'address_fields', locals: { :f => address} %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
