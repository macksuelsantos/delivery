<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Client</th>
      <th>Status</th>
      <th>Payment</th>
      <th>Delivery guy</th>
      <th>Fare</th>
      <th>Note</th>
      <th>Amount Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client.name %></td>
        <td><%= order.status %></td>
        <td><%= order.payment %></td>
        <td><%= order.delivery_guy %></td>
        <td><%= number_to_currency(order.fare, :unit => '$') %></td>
        <td><%= order.note %></td>
        <td><%= order.product_items.size %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: 'btn btn-primary' %>
