<div class="row panel" data-params="one">
  <%= simple_form_for @order do |f| %>
    <% if @order.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <h2 class="alert-title">Sorry, <%= pluralize(@order.errors.count, 'error') %> prohibited this discount from being saved:</h2>
          <ul class="alert-list">
            <% @order.errors.full_messages.each do |message| %>
                <li><strong>*</strong> <%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <label><%= 'Client' %>:</label>
      <%= f.select :client_id, @clients.collect { |u| [u.name, u.id] }, {:prompt => 'Select a Client'}, :required => true, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.fields_for :address do |address| %>
        <%= render :partial => 'address_fields', locals: { :f => address} %>
      <% end %>
    </div>

    <div class="form-group">
      <label><%= 'Status' %>:</label>
      <%= f.select :status, status, {:prompt => 'Select a Status'}, :required => true, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <div><label><%= 'Payment' %>:</label></div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :payment, 'CASH', class: 'form-check-input' %>
        <label class="form-check-label" for="inlineRadio1">Cash</label>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :payment, 'CREDIT_CARD', class: 'form-check-input' %>
        <label class="form-check-label" for="inlineRadio2">Credit Card</label>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :payment, 'DEBIT_CARD', class: 'form-check-input' %>
        <label class="form-check-label" for="inlineRadio3">Debit Card</label>
      </div>
    </div>

    <div class="form-group">
      <label><%= 'Delivery Guy' %>:</label>
      <%= f.text_field :delivery_guy, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label><%= 'Fare' %>:</label>
      <%= f.number_field :fare, class: 'form-control', :step => 0.5 %>
    </div>

    <div class="form-group">
      <label><%= 'Note' %>:</label>
      <%= f.text_area :note, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
