<div class="nested-fields">
  <div class="jumbotron">
    <div class="form-row">
      <div class="form-group col-md-10">
        <label><%= 'Product' %>:</label>
        <%= f.select :product_id, @products.collect { |u| [u.name, u.id] }, {:prompt => 'Select a Product'}, :required => true, :class => 'form-control' %>
      </div>

      <div class="form-group col-md-10">
        <label><%= 'Amount' %>:</label>
        <%= f.text_field :amount, id: :product_item_amount, class: 'form-control' %>
      </div>

      <div class="form-group col-md-10">
        <label><%= 'Price' %>:</label>
        <%= f.text_field :price, id: :product_item_price, class: 'form-control', disabled: true %>
      </div>
    </div>

    <%= link_to_remove_association 'Remove', f,  data: {confirm: 'Are you Sure?'}, :class => 'btn btn-danger btn-lg' %>
  </div>
</div>
